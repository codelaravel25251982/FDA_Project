                <dt>
                    @Html.DisplayNameFor(model => model.CCopy) :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CCopy)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StartQ) :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StartQ)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EndQ) :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EndQ)
