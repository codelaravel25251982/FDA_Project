                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Remark1) :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Remark1)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Speaker) :
                </dt>

                <dd>
                    @if (Model.Speaker == "L")
                    {
                        @("เสียงออกลำโพงซ้าย");
                    }
                    else
                    {
                        @("เสียงออกลำโพงขวา");
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DeptID) :
                </dt>

                <dd>
                    @ViewBag.Depart
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ServiceFullName) :
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ServiceFullName)
                </dd>

            </dl>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink(" กลับสู่หน้ารายการ", "Index", null, new { @class = "btn btn-lg   fa fa-arrow-left shiny btn-yellow" }) | <input type="submit" value="Delete" class="btn btn-default shiny btn-danger" />
            </div>
            }
        </div>

    </dl>
</div>
