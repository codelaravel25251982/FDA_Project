@model IEnumerable<BeyondThemes.BeyondAdmin.Models.Configservice.tbService>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Default.cshtml";
}

<div class="well with-header  with-footer">
    <div class="header bg-success">
        หน้าตั่งค่าหัวช้อบริการ
    </div>
    <p>
        @Html.ActionLink(" สร้างห้วข้อบริการใหม่", "Create", new { @id = "" }, new { @class = "btn btn-success glyphicon glyphicon-user" })
    </p>
    <table class="table table-striped table-bordered table-hover dt-responsive nowrap " id="Configservice">
        <thead class="bordered-darkorange">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ServiveName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prefix)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CCopy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartQ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndQ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastQ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remark1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Speaker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeptID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceFullName)
                </th>
                <th>แก้ไขและแสดง</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiveName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prefix)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CCopy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartQ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndQ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastQ)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remark1)
                    </td>
                    <td>
                        @if (item.Speaker == "L")
                        {
                            @("เสียงออกลำโพงซ้าย");
                        }
                        else
                        {
                            @("เสียงออกลำโพงขวา");
                        }
                    </td>
                    <td>
                        @Html.DropDownList("DeptID", (IEnumerable<SelectListItem>)ViewBag.Depart, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceFullName)
                    </td>
                    <td>
                        @Html.ActionLink(" แก้ไข", "Edit", new { id = item.ServID }, new { @class = "btn btn-blue btn-sm glyphicon glyphicon-pencil" })
                        @Html.ActionLink(" รายละเอียด", "Details", new { id = item.ServID }, new { @class = "btn btn-warning btn-sm glyphicon glyphicon-info-sign" })
                        @Html.ActionLink(" ลบทิ้ง", "Delete", new { id = item.ServID }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-trash" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section PageScripts{

    <script src="~/Scripts/jquery-2.2.1.js"></script>
    <link href="~/Content/DataTables-1.10.11/media/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables-1.10.11/extensions/Responsive/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/DataTables-1.10.11/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.11/media/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.11/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.11/extensions/Responsive/js/responsive.bootstrap.min.js"></script>
    <script src="~/assets/js/validation/bootstrapValidator.js"></script>
    <script src="~/assets/js/datetime/bootstrap-timepicker.js"></script>
    <script src="~/assets/js/datetime/bootstrap-datepicker.js"></script>
    <script src="~/assets/js/datetime/bootstrap-datepicker-thai.js"></script>
    <script src="~/assets/js/datetime/locales/bootstrap-datepicker.th.js"></script>
    <script src="~/Scripts/custombox-master/src/js/custombox.js"></script>
    <script src="~/Scripts/custombox-master/src/js/legacy.js"></script>
    <script>
        $(document).ready(function () {
            $('#Configservice').DataTable({
                "lengthMenu": [[5, 10, 15, 20, 25, 30, -1], [5, 10, 15, 20, 25, 30, "All"]],
                "ordering": false,
                "info": true,
                "bFilter": true,
                "language": {
                    "lengthMenu": "แสดง _MENU_ รายการต่อหน้า",
                    "zeroRecords": "ไม่พบข้่อมูลที่ต้องการ",
                    "info": "แสดง _PAGE_ ถึง _PAGES_",
                    "infoEmpty": "ไม่มีบันทึกที่สามารถดึงได้",
                    "search": "ค้นหา :"
                }
            });

        });
    </script>
}
